@{
  Layout = "_Layout";
}

@model PierreBakery.Models.Flavor

<div class = "container">
  <div class = "infoBox">
    <h2>Add a Treat to this Flavor: @Html.DisplayFor(model => model.Name)</h2>
    
    @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.FlavorId)

      <h3>@Html.Label("Select Treat")
      @Html.DropDownList("TreatId")</h3>
      <br />
      <input type = "submit" value = "Save"  class = "btn2"/>
    }
    @Html.ActionLink("Cancel", "Index", null, null, new { @class = "btn" })
  </div>
</div>

