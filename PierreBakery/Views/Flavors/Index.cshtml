@{
  Layout = "_Layout";
}

@using PierreBakery.Models;
@model List<PierreBakery.Models.Flavor>;

<div class = "container">
  <h2>Flavors</h2>
  
  @Html.ActionLink("Add New Flavor", "Create", null, null, new { @class ="pageLink" })
  @Html.ActionLink("Home", "Index", "Home", null, new { @class ="pageLink" })

  <div class = "indexBox">
    <!-- <img class = "image1" src = "~/image/machine3.png"> -->

    @if (@Model.Count == 0)
      {
        <h4>No Flavor Yet!</h4>
      } 
      else
      {
      <h5>Click on Flavor to See Details</h5>
      @foreach (Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{ flavor.Name }", "Details", new { id = flavor.FlavorId }, new { @class ="linkWordColor" })</li>
      }
    }
  </div> 
</div>
