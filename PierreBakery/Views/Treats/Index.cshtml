@{
  Layout = "_Layout";
}

@using PierreBakery.Models;

<div class = "container">
  <h2>Treats List</h2>

  @Html.ActionLink("Add Treat", "Create", null, null, new { @class = "pageLink" })
  @Html.ActionLink("Home", "Index", "Home", null, new { @class = "pageLink" })
  
  <div class = "indexBox">
    <!-- <img class = "image1" src = "~/image/machine3.png" > -->

    @if (@Model.Count == 0)
    {
      <h2>Treat List is EMPTY!</h2>
    } 
    else
    {
      <h6>Click on Treat to See Details</h6>
      @foreach(Treat treat in Model)
      {
        <li>@Html.ActionLink($"{ treat.Name }", "Details", new { id = treat.TreatId }, new { @class = "linkWordColor" }) 
        </li>
      }
    }
  </div>   
</div>