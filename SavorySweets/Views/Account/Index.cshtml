@{
    Layout = "_Layout";
}

@using System.Security.Claims

<div class = "container">
  <h2>Authentication with Identity</h2>
  <h5>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "pageLink3" })</h5>

  <div class = "indexBox">
    @if (User.Identity.IsAuthenticated)
    {
      <h3>Hello @User.Identity.Name!</h3> <br />
      @using (Html.BeginForm("LogOff", "Account"))
    
      {
          <input type="submit" class="pageLink3" value="L O G O U T" />
      }
    }
    else
    {
      <h3>Register or Login to Your Account.</h3>
      <br />
      <h5>@Html.ActionLink("Register", "Register", null, null, new { @class = "pageLink" })</h5>
      <h5>@Html.ActionLink("Log in", "Login", null, null, new { @class = "pageLink" })</h5>
    }
  </div>
</div>
