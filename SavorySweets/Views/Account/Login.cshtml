@{
  Layout = "_Layout";
}

@using SavorySweets.ViewModels

@model LoginViewModel

<h2>Login to Your Account</h2>
@using (Html.BeginForm())
{
    <h3>@Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)</h3>

    <h3>@Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password)</h3>
    <br />
    <input type="submit" value="Login" class="btn" />
}