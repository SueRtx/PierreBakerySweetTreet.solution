@{
  Layout = "_Layout";
}

@using SavorySweets.Models;
@model List<SavorySweets.Models.Flavor>;

<div class = "container">
  <h2>Flavors</h2>
  
  @Html.ActionLink("Add New Flavor", "Create", null, null, new { @class ="pageLink" })
  @Html.ActionLink("Home", "Index", "Home", null, new { @class ="pageLink" })

  <div class = "indexBox">
    <img class = "image1" src = "~/image/candy7.png" >
    @if (@Model.Count == 0)
      {
        <h3>No Flavor Yet!</h3>
      } 
      else
      {
      <h3>Click on Flavor to See Details</h3>
      @foreach (Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{ flavor.Name }", "Details", new { id = flavor.FlavorId }, new { @class ="linkWordColor" })</li>
      }
    }
  </div> 
</div>
